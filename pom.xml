        </dependency>

        <dependency>
            <groupId>com.sk89q</groupId>
            <artifactId>WorldGuard</artifactId>
            <version>6.1</version>
            <scope>system</scope>
            <systemPath>C:/Users/Admin/IdeaProjects/CustomMobs_v4/lib/worldguard-6.1.jar</systemPath>
        </dependency>

        <!-- Factions & MassiveCore -->

        <dependency>
