            <groupId>org.bukkit</groupId>
            <artifactId>spigot-1.9.R2</artifactId>
            <version>1.9.R2</version>
            <scope>system</scope>
            <systemPath>C:/Users/Admin/IdeaProjects/CustomMobs_v4/lib/spigot-1.9.4.jar</systemPath>
        </dependency>

